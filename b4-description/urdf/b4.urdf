<?xml version="1.0"?>
<robot name="B4">
	<!-- Base link position -->
	<link name="base_link">
		<visual>
			<origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.12" />
			<geometry>
				<cylinder length="0.14" radius="0.1" />
			</geometry>
			<material name="blue">
				<color rgba="0 0 1 1" />
			</material>
		</visual>
	</link>
	<!-- Left wheel link -->
	<link name="left_wheel">
		<visual>
			<geometry>
				<cylinder length="0.009" radius="0.036" />
			</geometry>
			<material name="black">
				<color rgba="0 0 0 1" />
			</material>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.009" radius="0.036" />
			</geometry>
		</collision>
	</link>
	<!-- Joint configuration left joint -->
	<joint name="left_joint" type="continuous">
		<axis xyz="0 0 -1" />
		<parent link="base_link" />
		<child link="left_wheel" />
		<origin rpy="1.57075 0.0 0.0" xyz="0 0.071 0.036" />
		<limit effort="2" velocity="10" />
		<joint_properties damping="0.02" friction="0.04" />
	</joint>
	<!-- Transmission configuration left joint -->
	<transmission name="$left_trans" type="SimpleTransmission">
		<type>transmission_interface/SimpleTransmission</type>
		<actuator name="$left_motor">
			<mechanicalReduction>1</mechanicalReduction>
		</actuator>
		<joint name="left_joint">
			<hardwareInterface>VelocityJointInterface</hardwareInterface>
		</joint>
	</transmission>
	<!-- Right wheel link -->
	<link name="right_wheel">
		<visual>
			<geometry>
				<cylinder length="0.009" radius="0.036" />
			</geometry>
			<material name="black">
				<color rgba="0 0 0 1" />
			</material>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.009" radius="0.036" />
			</geometry>
		</collision>
	</link>
	<!-- Joint configuration left joint -->
	<joint name="right_joint" type="continuous">
		<axis xyz="0 0 -1" />
		<parent link="base_link" />
		<child link="right_wheel" />
		<origin rpy="1.57075 0.0 0.0" xyz="0 -0.071 0.036" />
		<limit effort="2" velocity="10" />
		<joint_properties damping="0.02" friction="0.04" />
	</joint>
	<!-- Transmission configuration right joint -->
	<transmission name="$right_trans" type="SimpleTransmission">
		<type>transmission_interface/SimpleTransmission</type>
		<actuator name="$right_motor">
			<mechanicalReduction>1</mechanicalReduction>
		</actuator>
		<joint name="right_joint">
			<hardwareInterface>VelocityJointInterface</hardwareInterface>
		</joint>
	</transmission>

	<!-- US Sensors -->
	<!-- US Sensor - Center -->
	<link  name="topicSonarRangeCenter">
		<visual>
			<geometry>
				<box size="0.045 0.02 0.015" /><!-- Define a Box element with dimension LxHxP in meters -->
			</geometry>
			<origin rpy="1.57075 0 1.57075" xyz="0.0 0.0 0.0" />
			<material name="black">
				<color rgba="0 0 0 1" />
			</material>
		</visual>
	</link>
	<joint name="base_link_to_topicSonarRangeCenter" type="fixed">
		<parent link="base_link" />
		<child link="topicSonarRangeCenter" />
		<origin xyz="0.09 0 0.08" rpy="0 0 0" />
	</joint>
	<!-- US Sensor - Left -->
	<link  name="topicSonarRangeLeft">
		<visual>
			<geometry>
				<box size="0.045 0.02 0.015" />
			</geometry>
			<origin rpy="1.57075 0 1.57075" xyz="0.0 0.0 0.0" />
			<material name="black">
				<color rgba="0 0 0 1" />
			</material>
		</visual>
	</link>
	<joint name="base_link_to_topicSonarRangeLeft" type="fixed">
		<parent link="base_link" />
		<child link="topicSonarRangeLeft" />
		<origin xyz="0.09 0 0.08" rpy="0 0 0" />
	</joint>
	<!-- US Sensor - Right -->
	<link  name="topicSonarRangeRight">
		<visual>
			<geometry>
				<box size="0.045 0.02 0.015" />
			</geometry>
			<origin rpy="1.57075 0 1.57075" xyz="0.0 0.0 0.0" />
			<material name="black">
				<color rgba="0 0 0 1" />
			</material>
		</visual>
	</link>
	<joint name="base_link_to_topicSonarRangeRight" type="fixed">
		<parent link="base_link" />
		<child link="topicSonarRangeRight" />
		<origin xyz="0.09 0 0.08" rpy="0 0 0" />
	</joint>
</robot>
